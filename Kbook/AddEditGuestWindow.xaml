<Window x:Class="Kbook.AddEditGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guest Information"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDark}">

    <Grid>
        <Border Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderGold}"
                BorderThickness="2"
                CornerRadius="10"
                Margin="20,10,20,0" Height="404" VerticalAlignment="Top">

            <StackPanel Margin="30"
                        VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock x:Name="txtTitle"
                          Text="Add New Guest"
                          Style="{StaticResource SubHeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Name Field -->
                <TextBlock Text="Full Name *"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtName"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Contact Number Field -->
                <TextBlock Text="Contact Number *"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtContactNumber"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Email Field -->
                <TextBlock Text="Email Address"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtEmail"
                        Height="40"
                        Margin="0,0,0,30"/>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnSave"
                            Content="Save"
                            Grid.Column="0"
                            Height="45"/>

                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Grid.Column="2"
                            Height="45"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>