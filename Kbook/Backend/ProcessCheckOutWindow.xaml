<Window x:Class="Kbook.ProcessCheckOutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Process Check-Out"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDark}">

    <Grid>
        <Border Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderGold}"
                BorderThickness="2"
                CornerRadius="10"
                Margin="20">

            <StackPanel Margin="30"
                        VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Check-Out Payment"
                          Style="{StaticResource SubHeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Guest Information -->
                <Border Background="{StaticResource SurfaceLight}"
                        BorderBrush="{StaticResource BorderGold}"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock x:Name="txtGuestInfo"
                                  Text="Guest: John Doe"
                                  Foreground="{StaticResource TextLight}"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtRoomInfo"
                                  Text="Room: 101"
                                  Foreground="{StaticResource TextLight}"
                                  FontSize="14"
                                  Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtDatesInfo"
                                  Text="Check-In: 2025-01-01 | Check-Out: 2025-01-03"
                                  Foreground="{StaticResource TextLight}"
                                  FontSize="14"/>
                    </StackPanel>
                </Border>

                <!-- Total Amount (Read-Only) -->
                <TextBlock Text="Total Amount (₱)"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtTotalAmount"
                        Height="50"
                        Margin="0,0,0,20"
                        IsReadOnly="True"
                        Background="{StaticResource SurfaceLight}"
                        Opacity="0.7"
                        FontWeight="Bold"
                        FontSize="20"
                        TextAlignment="Center"/>

                <!-- Payment Method -->
                <TextBlock Text="Payment Method *"
                          Style="{StaticResource LabelText}"/>
                <ComboBox x:Name="cmbPaymentMethod"
                         Height="40"
                         Margin="0,0,0,30"
                         Foreground="White">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="#2D2D2D"/>
                            <Style.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" Value="{StaticResource GoldAccent}"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBoxItem Content="Cash" IsSelected="True"/>
                    <ComboBoxItem Content="Card"/>
                    <ComboBoxItem Content="Online"/>
                </ComboBox>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnConfirm"
                            Content="Confirm Payment"
                            Grid.Column="0"
                            Height="45"/>

                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Grid.Column="2"
                            Height="45"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>