<Window x:Class="KBook.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KBook - Hotel Login"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDark}">

    <Grid>
        <!-- Centered Login Panel -->
        <Border Width="450"
                Height="500"
                Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderGold}"
                BorderThickness="2"
                CornerRadius="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel Margin="50"
                        VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="🏨 KBook Hotel Login"
                          Style="{StaticResource HeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40"/>

                <!-- Username Section -->
                <TextBlock Text="Username"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtUsername"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Password Section -->
                <TextBlock Text="Password"
                          Style="{StaticResource LabelText}"/>
                <PasswordBox x:Name="txtPassword"
                            Height="40"
                            Margin="0,0,0,30"/>

                <!-- Button Panel -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnLogin"
                            Content="Login"
                            Grid.Column="0"
                            Height="45"/>

                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Grid.Column="2"
                            Height="45"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>

                <!-- Separator Line -->
                <Rectangle Height="1"
                          Fill="{StaticResource BorderGold}"
                          Margin="0,10,0,20"
                          Opacity="0.5"/>

                <!-- Create Guest Account Link -->
                <TextBlock HorizontalAlignment="Center">
                    <Hyperlink x:Name="linkCreateAccount"
                              TextDecorations="None">
                        <Run Text="Create Guest Account"
                             FontSize="13"
                             Foreground="{StaticResource GoldAccent}"/>
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>

        <!-- Footer Text -->
        <TextBlock Text="KBook Hotel Reservation &amp; Front Desk System"
                  Foreground="{StaticResource TextGold}"
                  FontSize="11"
                  Opacity="0.6"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,20"/>
    </Grid>
</Window>