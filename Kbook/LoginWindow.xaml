<Window x:Class="Kbook.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KBook - Staff Login"
        Height="550"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDark}">

    <Grid>
        <!-- Centered Login Panel -->
        <Border Width="450"
                Height="450"
                Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderGold}"
                BorderThickness="2"
                CornerRadius="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel Margin="50"
                        VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="🏨 KBook Front Desk"
                          Style="{StaticResource HeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Staff Login Portal"
                          Foreground="{StaticResource TextGold}"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40"
                          Opacity="0.8"/>

                <!-- Username Section -->
                <TextBlock Text="Username"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtUsername"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Password Section -->
                <TextBlock Text="Password"
                          Style="{StaticResource LabelText}"/>
                <PasswordBox x:Name="txtPassword"
                            Height="40"
                            Margin="0,0,0,30"/>

                <!-- Button Panel -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnLogin"
                            Content="Login"
                            Grid.Column="0"
                            Height="45"/>

                    <Button x:Name="btnCancel"
                            Content="Exit"
                            Grid.Column="2"
                            Height="45"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>

            </StackPanel>
        </Border>

        <!-- Footer Text -->
        <TextBlock Text="KBook Hotel Front Desk System - Staff Access Only"
                  Foreground="{StaticResource TextGold}"
                  FontSize="11"
                  Opacity="0.6"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,20"/>
    </Grid>
</Window>