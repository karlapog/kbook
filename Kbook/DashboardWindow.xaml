<Window x:Class="Kbook.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kbook - Hotel Dashboard"
        Height="800"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundDark}">

    <Window.Resources>
        <!-- Logout Button Style (Red) -->
        <Style x:Key="LogoutButton" TargetType="Button">
            <Setter Property="Background" Value="#DC143C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1744"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderGold}"
                BorderThickness="0,0,0,2">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <TextBlock Text="🏨 Kbook Dashboard"
                          Style="{StaticResource HeaderText}"
                          VerticalAlignment="Center"
                          Grid.Column="0"/>

                <!-- Welcome Text -->
                <StackPanel Grid.Column="1"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0">
                    <TextBlock Text="Welcome,"
                              Foreground="{StaticResource TextGold}"
                              FontSize="12"
                              Opacity="0.8"/>
                    <TextBlock x:Name="txtWelcomeUser"
                              Text="Admin User"
                              Foreground="{StaticResource GoldAccent}"
                              FontSize="16"
                              FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Logout Button -->
                <Button x:Name="btnLogout"
                        Content="Logout"
                        Grid.Column="2"
                        Height="40"
                        Style="{StaticResource LogoutButton}"/>
            </Grid>
        </Border>

        <!-- Main Content Area with TabControl -->
        <TabControl Grid.Row="1"
                    Margin="20"
                    x:Name="mainTabControl">

            <!-- Tab 1: Reservation Info -->
            <TabItem Header="Reservation Info">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Section Title -->
                    <TextBlock Text="Reservation Information"
                  Style="{StaticResource SubHeaderText}"
                  Margin="0,0,0,15"
                  Grid.Row="0"/>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgReservations"
                 Grid.Row="1"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 SelectionMode="Single"
                 Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Reservation ID" Width="120" Binding="{Binding ReservationId}"/>
                            <DataGridTextColumn Header="Guest Name" Width="200" Binding="{Binding GuestName}"/>
                            <DataGridTextColumn Header="Room Number" Width="120" Binding="{Binding RoomNumber}"/>
                            <DataGridTextColumn Header="Check-In" Width="120" Binding="{Binding CheckIn, StringFormat=yyyy-MM-dd}"/>
                            <DataGridTextColumn Header="Check-Out" Width="120" Binding="{Binding CheckOut, StringFormat=yyyy-MM-dd}"/>
                            <DataGridTextColumn Header="Status" Width="*" Binding="{Binding Status}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
                        <Button x:Name="btnAddReservation"
                   Content="New Reservation"
                   Width="150"
                   Height="40"
                   Margin="0,0,10,0"/>
                        <Button x:Name="btnEditReservation"
                   Content="Edit"
                   Width="100"
                   Height="40"
                   Margin="0,0,10,0"
                   Style="{StaticResource SecondaryButton}"/>
                        <Button x:Name="btnCancelReservation"
                   Content="Cancel"
                   Width="100"
                   Height="40"
                   Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 2: Check-In -->
            <TabItem Header="Check-In">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Guest Check-In"
                  Style="{StaticResource SubHeaderText}"
                  Margin="0,0,0,15"
                  Grid.Row="0"/>

                    <DataGrid x:Name="dgCheckIn"
                 Grid.Row="1"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 SelectionMode="Single"
                 Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Reservation ID" Width="120" Binding="{Binding ReservationId}"/>
                            <DataGridTextColumn Header="Guest Name" Width="200" Binding="{Binding GuestName}"/>
                            <DataGridTextColumn Header="Room Number" Width="120" Binding="{Binding RoomNumber}"/>
                            <DataGridTextColumn Header="Check-In Date" Width="150" Binding="{Binding CheckIn, StringFormat=yyyy-MM-dd}"/>
                            <DataGridTextColumn Header="Check-Out Date" Width="150" Binding="{Binding CheckOut, StringFormat=yyyy-MM-dd}"/>
                            <DataGridTextColumn Header="Status" Width="*" Binding="{Binding Status}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
                        <Button x:Name="btnProcessCheckIn"
                   Content="Process Check-In"
                   Width="150"
                   Height="40"
                   Margin="0,0,10,0"/>
                        <Button x:Name="btnRefreshCheckIn"
                   Content="Refresh"
                   Width="100"
                   Height="40"
                   Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 3: Check-Out -->
            <TabItem Header="Check-Out">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Guest Check-Out"
                  Style="{StaticResource SubHeaderText}"
                  Margin="0,0,0,15"
                  Grid.Row="0"/>

                    <DataGrid x:Name="dgCheckOut"
                 Grid.Row="1"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 SelectionMode="Single"
                 Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Reservation ID" Width="120" Binding="{Binding ReservationId}"/>
                            <DataGridTextColumn Header="Guest Name" Width="200" Binding="{Binding GuestName}"/>
                            <DataGridTextColumn Header="Room Number" Width="120" Binding="{Binding RoomNumber}"/>
                            <DataGridTextColumn Header="Check-In" Width="120" Binding="{Binding CheckIn, StringFormat=yyyy-MM-dd}"/>
                            <DataGridTextColumn Header="Check-Out" Width="120" Binding="{Binding CheckOut, StringFormat=yyyy-MM-dd}"/>
                            <DataGridTextColumn Header="Total Amount" Width="*" Binding="{Binding TotalAmount, StringFormat=₱{0:N2}}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
                        <Button x:Name="btnProcessCheckOut"
                   Content="Process Check-Out"
                   Width="150"
                   Height="40"
                   Margin="0,0,10,0"/>
                        <Button x:Name="btnRefreshCheckOut"
                   Content="Refresh"
                   Width="100"
                   Height="40"
                   Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 4: Guests -->
            <TabItem Header="Guests">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Guest Management"
                  Style="{StaticResource SubHeaderText}"
                  Margin="0,0,0,15"
                  Grid.Row="0"/>

                    <DataGrid x:Name="dgGuests"
                 Grid.Row="1"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 SelectionMode="Single"
                 Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Guest ID" Width="100" Binding="{Binding GuestId}"/>
                            <DataGridTextColumn Header="Name" Width="250" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Contact Number" Width="150" Binding="{Binding ContactNumber}"/>
                            <DataGridTextColumn Header="Email" Width="*" Binding="{Binding Email}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
                        <Button x:Name="btnAddGuest"
                   Content="Add Guest"
                   Width="120"
                   Height="40"
                   Margin="0,0,10,0"/>
                        <Button x:Name="btnEditGuest"
                   Content="Edit"
                   Width="100"
                   Height="40"
                   Margin="0,0,10,0"
                   Style="{StaticResource SecondaryButton}"/>
                        <Button x:Name="btnDeleteGuest"
                   Content="Delete"
                   Width="100"
                   Height="40"
                   Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 5: Rooms Available -->
            <TabItem Header="Rooms Available">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Room Availability"
                  Style="{StaticResource SubHeaderText}"
                  Margin="0,0,0,15"
                  Grid.Row="0"/>

                    <DataGrid x:Name="dgRooms"
                 Grid.Row="1"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 SelectionMode="Single"
                 Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room Number" Width="120" Binding="{Binding RoomNumber}"/>
                            <DataGridTextColumn Header="Room Type" Width="150" Binding="{Binding Type}"/>
                            <DataGridTextColumn Header="Status" Width="120" Binding="{Binding Status}"/>
                            <DataGridTextColumn Header="Price per Night" Width="*" Binding="{Binding Price, StringFormat=₱{0:N2}}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right">
                        <Button x:Name="btnAddRoom"
                   Content="Add Room"
                   Width="120"
                   Height="40"
                   Margin="0,0,10,0"/>
                        <Button x:Name="btnEditRoom"
                   Content="Edit"
                   Width="100"
                   Height="40"
                   Margin="0,0,10,0"
                   Style="{StaticResource SecondaryButton}"/>
                        <Button x:Name="btnDeleteRoom"
                   Content="Delete"
                   Width="100"
                   Height="40"
                   Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>