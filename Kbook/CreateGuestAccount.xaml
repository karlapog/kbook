<Window x:Class="KBook.CreateGuestAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KBook - Create Guest Account"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDark}">

    <Grid>
        <!-- Centered Registration Panel -->
        <Border Width="500"
                Height="664"
                Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderGold}"
                BorderThickness="2"
                CornerRadius="10"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel Margin="50"
                        VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock Text="Create Guest Account"
                          Style="{StaticResource HeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Register as a new guest in our hotel system"
                          Foreground="{StaticResource TextGold}"
                          FontSize="13"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"
                          Opacity="0.8"/>

                <!-- Guest ID (Read-Only) -->
                <TextBlock Text="Guest ID"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtGuestID"
                        Height="40"
                        Margin="0,0,0,20"
                        IsReadOnly="True"
                        IsEnabled="False"
                        Text="AUTO-GENERATED"
                        FontStyle="Italic"
                        Opacity="0.7"/>

                <!-- First Name -->
                <TextBlock Text="First Name"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtFirstName"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Last Name -->
                <TextBlock Text="Last Name"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtLastName"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtEmail"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Password -->
                <TextBlock Text="Password"
                          Style="{StaticResource LabelText}"/>
                <PasswordBox x:Name="txtPassword"
                            Height="40"
                            Margin="0,0,0,30"/>

                <!-- Button Panel -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnRegister"
                            Content="Register"
                            Grid.Column="0"
                            Height="45"/>

                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Grid.Column="2"
                            Height="45"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>

            </StackPanel>
        </Border>

        <!-- Footer Text -->
        <TextBlock Text="KBook Hotel Reservation &amp; Front Desk System"
                  Foreground="{StaticResource TextGold}"
                  FontSize="11"
                  Opacity="0.6"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,20"/>
    </Grid>
</Window>