<Window x:Class="Kbook.AddEditRoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Information"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundDark}">

    <Grid>
        <Border Background="{StaticResource SurfaceDark}"
                BorderBrush="{StaticResource BorderGold}"
                BorderThickness="2"
                CornerRadius="10"
                Margin="20">

            <StackPanel Margin="30"
                        VerticalAlignment="Center">

                <!-- Title -->
                <TextBlock x:Name="txtTitle"
                          Text="Add New Room"
                          Style="{StaticResource SubHeaderText}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <!-- Room Number Field (Read-Only) -->
                <TextBlock Text="Room Number"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtRoomNumber"
                        Height="40"
                        Margin="0,0,0,20"
                        IsReadOnly="True"
                        Background="{StaticResource SurfaceLight}"
                        Opacity="0.7"/>

                <!-- Room Type Field -->
                <TextBlock Text="Room Type *"
                          Style="{StaticResource LabelText}"/>
                <ComboBox x:Name="cmbRoomType"
                         Height="40"
                         Margin="0,0,0,20"
                         SelectionChanged="CmbRoomType_SelectionChanged">
                    <ComboBoxItem Content="Single Room"/>
                    <ComboBoxItem Content="Double Room"/>
                    <ComboBoxItem Content="Suite"/>
                </ComboBox>

                <!-- Room Status Field -->
                <TextBlock Text="Status *"
                          Style="{StaticResource LabelText}"/>
                <ComboBox x:Name="cmbStatus"
                         Height="40"
                         Margin="0,0,0,20">
                    <ComboBoxItem Content="Available" IsSelected="True"/>
                    <ComboBoxItem Content="Occupied"/>
                </ComboBox>

                <!-- Price Field (Read-Only) -->
                <TextBlock Text="Price per Night (₱)"
                          Style="{StaticResource LabelText}"/>
                <TextBox x:Name="txtPrice"
                        Height="40"
                        Margin="0,0,0,30"
                        IsReadOnly="True"
                        Background="{StaticResource SurfaceLight}"
                        Opacity="0.7"/>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnSave"
                            Content="Save"
                            Grid.Column="0"
                            Height="45"/>

                    <Button x:Name="btnCancel"
                            Content="Cancel"
                            Grid.Column="2"
                            Height="45"
                            Style="{StaticResource SecondaryButton}"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>